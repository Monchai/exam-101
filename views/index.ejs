<!DOCTYPE html>
<html>
  <head>
    <title>Exam-101</title>
    <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
  </head>
  <body ng-app="exam101">
    <div class="container-fluid">
      <div class="row">
        <div class="col-8">
          <div ng-controller="PhoneBookController" ng-init="init()">
            <h1>{{title}}</h1>
            
            <div class="container-fluid">
              <div class="row">
                <div class="col-6">
                  <input class="form-control" type="text" ng-model="phoneForFind" />                  
                </div>
                <div class="col-6">
                  <button class="btn btn-primary" ng-click="findByPhone()">get data from phone</button>
                </div>
              </div>
            </div>

            <div ng-if="result.length>0">
              {{result}}
            </div>

            <table class="table table-striped table-sm">
              <thead class="thead-dark">
                <tr>
                  <th>#</th><th>Name</th><th>Phone No</th><th>Address</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat=" item in phoneBooks">
                  <td>{{$index+1}}</td>
                  <td>{{item.name}}</td>
                  <td><button class="btn btn-link" ng-click="setToFind(item.phoneNo)" title="set phone no to textbox.">{{item.phoneNo}}</button></td>
                  <td>{{item.address}}</td>            
                </tr>
              </tbody>
            </table>
          </div>
      
        </div>
        <div class="col-4">
          <div ng-controller="StringEncoderController">
            <h1>{{title}}</h1>
            <hr />
            String : <input type="text" class="form-control" ng-model="data" />
            Keyword : <input type="text" class="form-control" ng-model="keyword" />      
            <button class="btn btn-primary" ng-click="resolveEncoder()">resolve</button>

            <div ng-if="result.length>0">
              {{result}}
            </div>

            <div style="margin-top: 30px;">
              <h3>Test Case</h3>
